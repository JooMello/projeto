<%- include ("../../partials/header.ejs") %> <%- include
("../../partials/navbar.ejs") %>

  <div class="container">
    <hr />
    <div class="card">
      <div class="card-header">
        <h2>Atualizar Pagamento</h2>
      </div>
      <div class="card-body">
        <form method="POST" action="/payments/update">
          <label>Data da Competência</label>
           <input type="hidden" value="<%= payment.id %>" name="id" />
          <input
            type="date"
            name="data"
            class="form-control"
            value="<%= payment.data %>"
            required
          /><br />
          <label>Fornecedor</label>
          <input
            class="form-control"
            type="texto"
            name="fornecedor"
            placeholder="Fornecedor"
            value="<%= payment.fornecedor %>"
            required
          /><br />
          <div class="input--with-addon currency-input">
            <label>Valor</label>
            <span class="input-addon input-addon--align-left" shouldshow="R$"
              ><span class="input-addon-text"> R$ </span
              ><!----></span
            >
            <div class="input__container numeral-input">
              <input
                required="required"
                type="text"
                name="valor"
                value="<%= payment.valor %>"
                class="input form-control form-control-danger"
              /><!---->
            </div>
            <!----><!---->
          </div>
          <br />
          <label>Observações</label>
          <textarea
            class="form-control"
            name="obs"
            value="<%= payment.obs %>"
            required
          ></textarea>

          <label>Categoria</label>
          <select name="category" class="form-control">
         <% categories.forEach((category) => { %>
   <option value="<%= category.id %>" <%= category.id === payment.id ? "selected" : '' %>>
    <%= category.title %></option>
 <% }) %>
        </select>
          <br />
          <button class="btn btn-success">Atualizar</button>
        </form>
      </div>
    </div>
  </div> 


<%- include ("../../partials/footer.ejs") %>
